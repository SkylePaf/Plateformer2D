script/source = "extends CharacterBody2D
class_name PlayerController

@export var speed = 4.0
@export var acceleration = 200.0
@export var min_jump_power = 5.0
@export var max_jump_power = 13.0
@export var charge_speed = 10.0 
@export var duck_speed = 30.0 
@export var drift_friction = 200.0
@export var air_acceleration = 400.0
@export var jump_horizontal_boost = 50.0
@export var jump_angle_degrees = 65.0
@export var jump_lock_duration = 0.2
@export var air_friction = 50.0

var deceleration = 180.0 
var max_speed = 130.0
var current_speed = 0.0
var speed_multiplier = 30.0
var jump_multiplier = -30.0
var direction = 0
var last_direction = 0
var last_air_direction = 0
var is_charging_jump = false
var is_ducking = false
var jump_pressed_in_air = false
var duck_pressed_in_air = false
var current_jump_power = 5.0
var current_duck_power = 5.0
var previous_velocity_x = 0.0
var jump_velocity_lock_time = 0.0

func _input(event):
	if event.is_action_pressed('move_down'):
		set_collision_mask_value(10, false)
	else:
		set_collision_mask_value(10, true)

func _physics_process(delta: float) -> void:
	if jump_velocity_lock_time > 0:
		jump_velocity_lock_time -= delta
	
	direction = Input.get_axis(\"move_left\", \"move_right\")
	
	if not is_on_floor():
		velocity += get_gravity() * delta
		
	if Input.is_action_pressed(\"jump\") and not is_on_floor():
		jump_pressed_in_air = true
	
	if Input.is_action_pressed(\"duck\") and not is_on_floor():
		duck_pressed_in_air = true
	
	if Input.is_action_just_pressed(\"jump\") and is_on_floor():
		is_charging_jump = true
		current_jump_power = min_jump_power
	
	if is_on_floor() and jump_pressed_in_air and Input.is_action_pressed(\"jump\") and not is_charging_jump:
		is_charging_jump = true
		current_jump_power = min_jump_power
		jump_pressed_in_air = false
	
	if is_charging_jump and is_on_floor():
		current_jump_power += charge_speed * delta
		current_jump_power = clamp(current_jump_power, min_jump_power, max_jump_power)
	
	if Input.is_action_just_released(\"jump\"):
		jump_pressed_in_air = false
		if is_on_floor() and is_charging_jump:
			if direction != 0:
				if Input.is_action_pressed('stop'):
					var jump_force = current_jump_power * abs(jump_multiplier)
					var angle_rad = deg_to_rad(jump_angle_degrees)
					velocity.y = -jump_force * sin(angle_rad)
					velocity.x = direction * jump_force * cos(angle_rad)
					jump_velocity_lock_time = jump_lock_duration
				else:
					var jump_force = current_jump_power * abs(jump_multiplier * 1.2)
					var angle_rad = deg_to_rad(40)
					velocity.y = -jump_force * sin(angle_rad)
					velocity.x = direction * jump_force * cos(angle_rad)
					jump_velocity_lock_time = jump_lock_duration
			else:
				velocity.y = current_jump_power * jump_multiplier
			
			is_charging_jump = false
	
	if Input.is_action_just_pressed(\"duck\") and is_on_floor():
		is_ducking = true
		current_duck_power = min_jump_power
	
	if is_on_floor() and duck_pressed_in_air and Input.is_action_pressed(\"duck\") and not is_ducking:
		is_ducking = true
		current_duck_power = min_jump_power
		duck_pressed_in_air = false
	
	if is_ducking and is_on_floor():
		current_duck_power += charge_speed * delta
		current_duck_power = clamp(current_duck_power, min_jump_power, max_jump_power)
	
	if Input.is_action_just_released(\"duck\"):
		duck_pressed_in_air = false
		if is_on_floor() and is_ducking:
			is_ducking = false
	
	if Input.is_action_pressed('stop') and is_charging_jump and is_on_floor():
		current_speed = 0
		velocity.x = move_toward(velocity.x, 0, speed * speed_multiplier)
	elif Input.is_action_pressed('stop') and is_ducking and is_on_floor():
		current_speed = 0
		velocity.x = move_toward(velocity.x, 0, speed * speed_multiplier)
	elif direction:
		if is_on_floor():
			if abs(velocity.x) > current_speed:
				current_speed = abs(velocity.x)
			
			if direction != last_direction and last_direction != 0:
				velocity.x = move_toward(velocity.x, 0, drift_friction * delta)
				current_speed = abs(velocity.x)
			elif !Input.is_action_pressed('jump') and !is_ducking:
				current_speed += acceleration * delta
				current_speed = clamp(current_speed, 0.0, max_speed)
				velocity.x = move_toward(velocity.x, direction * current_speed, acceleration * delta)
			elif Input.is_action_pressed('jump') or is_ducking:
				current_speed -= deceleration * delta
				current_speed = clamp(current_speed, duck_speed, max_speed)
				velocity.x = move_toward(velocity.x, direction * current_speed, deceleration * delta)
			
			last_direction = direction
			last_air_direction = 0
		else:
			if jump_velocity_lock_time <= 0:
				if direction != last_air_direction and last_air_direction != 0:
					velocity.x = move_toward(velocity.x, 0, air_friction * delta)
				else:
					var target_velocity = direction * speed * speed_multiplier
					velocity.x = move_toward(velocity.x, target_velocity, air_acceleration * delta)
			
			last_air_direction = direction
	else:
		if !is_on_floor():
			last_air_direction = 0
		else:
			if abs(velocity.x) > current_speed:
				current_speed = abs(velocity.x)
			
			current_speed = max(current_speed - (drift_friction * 2.0) * delta, 0)
			velocity.x = move_toward(velocity.x, 0, (drift_friction * 2.0) * delta)
			last_direction = 0
	
	move_and_slide()
"

